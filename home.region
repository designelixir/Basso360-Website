<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">

    <div class="site-container">

    

    {@|apply nav.block}
    <div class="socials-floating-block">
    {@|apply socials.block}
    </div>
     
    
    <div id="heroPadder" style="height: calc(100vh - 300px);  margin-bottom: 100px;"></div>
     {@|apply hero.block}
    {@|apply basso.block}
    <div class="flex-center-center">
    <div class="scrolling-client-list">
      <h2>Expertise in Multiple Categories</h2>
      <br>
      <squarespace:query collection="client-list" limit="15">
        <div class="client-list-grid flex-center-start" id="scrolling-client-list">
          {.repeated section items}
          <div class="client hover flex-center-center flex-column">
            <img src="{assetUrl}" class="client-logo"/>
            <h6 class="client-title">{title}</h6>
          </div>
          {.end}
        </div>
      </squarespace:query>
    </div>
    </div>

    <div class="flex-center-center">
	<div style="background: white" class="basic-padding in-the-press">
		<div style="border-bottom: 2px solid orange; width: 250px; ">
			<h2 class="title">In The Press</h2>
		</div>
		<squarespace:query collection="press" limit="2">
			<div class="flex-start-start in-the-press-grid">
				{.repeated section items}
				<div onclick="window.open({clickThruUrl})" class="press-item hover">
					<h4>{title}</h4>
					<script> var assetLink = 'assets/logos/' + {excerpt} + '.png'; </script>
					<img class="hover" src={customContent.pressLogo.assetUrl} style="height: 50px"/>
				</div>
				{.end}
			</div>
		</squarespace:query>
		<div class="flex-center-flexend basic-margin" >
			<a href='/press' target="_blank" class="continue-to-article">Get The Full Story &rarr;</a>
		</div>
	</div>
</div>
{@|apply aboutUs.block}
{@|apply whatWeDoBest.block}
    <main class="content-container flex-center-center" role="main" data-content-field="main-content">
      
      {squarespace.main-content}
    </main>



     

     

     
      <!-- cms content injection point -->
      

      <!--Footer with open block field -->
      {@|apply footer.block}

    </div>

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>

<script>

function moveFirstChildToLast() {
  setInterval(function() {
    var element = document.getElementById('scrolling-client-list')
    const firstChild = element.firstElementChild;
    firstChild.style.opacity = '0';
    element.appendChild(firstChild);
    firstChild.style.opacity = '1';
  }, 2000);
}

moveFirstChildToLast();

const clientListGrid = document.querySelector('.client');
const images = Array.from(clientListGrid.querySelectorAll('.client-logo'));
const imageWidth = images[0].offsetWidth;

clientListGrid.addEventListener('mouseover', function() {
  clientListGrid.style.animationPlayState = 'paused';
});

clientListGrid.addEventListener('mouseout', function() {
  clientListGrid.style.animationPlayState = 'running';
});

</script>