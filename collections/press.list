<!-- item loop -->
{.repeated section items}

    <div class="press-card flex-start-start">
        <div class=" flex-start-start basic-margin">
            
            
            <img src="{assetUrl}" class="press-image"/>
                
            
            
            <div class="press-details">
                <div class="time-wrapper">
                <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
                <p class="press-publisher">{excerpt}</p>
                </div>
                
                
                <h4 class="press-title">{title}</h4>
                
                
                {.if sourceUrl}
                    <a href={sourceUrl} target="_blank" class="continue-to-article">Continue to Article &rarr;</a>
                {.end}
            </div>
        </div>
    </div>

{.or}

  <!-- no items means no blog posts -->
  <p><em>No team members yet.</em></p>

{.end}
